<Window x:Class="Dagorlad_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dagorlad_7"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip" Closing="Window_Closing"
        Background="{StaticResource Background_Inside}"
        Foreground="{StaticResource Foreground}"
        Title="Dagorlad"
        Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Tag="Top" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Template="{StaticResource ButtonStandart}" Width="40" Height="40"
                    Content="{StaticResource Canvas_Settings}" Click="SettingsButton_Click" ToolTip="Настройки"/>
            <Button Grid.Column="1" Template="{StaticResource ButtonStandart}"
                    Click="CloseApplicationButton_Click" Width="40" Height="40" 
                    ToolTip="Выйти из приложения"
                    Content="{StaticResource Canvas_Exit}"/>
        </Grid>
        <Grid Tag="Middle">
        </Grid>
    </Grid>
</Window>
